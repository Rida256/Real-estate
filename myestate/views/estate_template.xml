<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hello_world" name="Hello World">
        <h4>
            <strong>Hello World</strong>
        </h4>
    </template>

    <template id="courses_list">
        <div>
            <t t-out="SomeAdditionalData" />
        </div>
        <div class="table">
            <table>
                <thead>
                    <th>Sequence</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>State</th>
                </thead>
                <tbody>
                    <t t-set="sequence" t-value="0" />
                    <t t-foreach="property" t-as="p">
                        <t t-set="sequence" t-value="sequence + 1" />
                        <tr t-attf-style="font-weight: bold;#{sequence % 1 == 0 and 'background: grey;' or ''}">
                            <td>
                                <t t-out="sequence" />
                            </td>
                            <td>
                                <t t-out="p.name" />
                            </td>
                            <td>
                                <t t-if="p.description" t-out="p.description" />
                                <t t-else="">No Description Available</t>
                            </td>
                            <td>
                                <span t-field="p.state"></span>
                            </td>

                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>

    <template id="hello_ritu" name="Hello World">
        <h4>
            <strong>
                Hello
                <t t-out="name" />
            </strong>
        </h4>
        <t t-call="myestate.courses_list">
            <t t-set="SomeAdditionalData">Hello</t>
        </t>
    </template>
    <template id="static_tmp" name="property">
        <t t-call="website.layout">
            <div class="container">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th>Sequence</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>State</th>
                        </thead>
                        <tbody>
                            <t t-set="sequence" t-value="0" />
                            <t t-foreach="properties" t-as="prt">
                                <t t-set="sequence" t-value="sequence + 1" />
                                <!-- <tr t-att-class="sequence % 2 == 0 and 'o_even' or ''"> -->
                                <tr t-attf-style="#{sequence % 2 == 0 and 'background: grey;' or ''}">
                                    <td>
                                        <t t-out="sequence" />
                                    </td>
                                    <td>
                                        <!-- <a t-attf-href="/course/#{course.id}"> -->
                                        <t t-out="prt.name" />
                                        <!-- </a> -->
                                    </td>
                                    <td>
                                        <t t-if="prt.description" t-out="prt.description" />
                                        <t t-else="">No Description Available</t>
                                    </td>
                                    <td>
                                        <span t-field="prt.state" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>


</odoo>